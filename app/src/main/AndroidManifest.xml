<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pe.edu.utp.rendimientoestudiantil">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name=".activities.SplashActivity" />
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CoursesActivity"
            android:label="@string/title_activity_courses"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.StudentsActivity"
            android:label="@string/title_activity_alumns"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.ChartActivity"
            android:label="@string/title_activity_chart"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.AddInstitutionActivity"
            android:label="@string/title_activity_add_institution"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.AddCourseActivity"
            android:label="@string/title_activity_add_course"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.AddStudentActivity"
            android:label="@string/title_activity_add_student"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>